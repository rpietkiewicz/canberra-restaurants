@*************************edit review starts here**********************************@
<div class="row">
  <div class="col-md-9">
    <h2 class="header-text3">Edit Review</h2>
  </div>
</div>

<form asp-action="Edit">
    <div class="form-horizontal">
        @*<h4>Review</h4>*@
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Heading" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Heading" class="form-control" />
                <span asp-validation-for="Heading" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Rating" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Restaurant" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Restaurant" class="form-control">
                    <option value="" selected disabled>Select a Restaurant</option>
                    <option>Italian and Sons</option>
                    <option>Jamie's Italian</option>
                    <option>Chairman & Yip</option>
                    <option>Dickson Asian Noodle House</option>
                    <option>Blu Ginger</option>
                    <option>Jewel of India</option>
                </select>

            </div>
        </div>

        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" value="@User.Identity.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Date" class="form-control" value="@DateTime.Now.ToString("d")" readonly /> @*Now.ToString shows date only but no time | or DateTime.Now - for showing both date and time *@
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
           
        <div class="form-group">
            <label asp-for="Comment" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Comment" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Agree" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Agree" class="form-control" />
                <span asp-validation-for="Agree" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Disagree" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Disagree" class="form-control" />
                <span asp-validation-for="Disagree" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

